rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // =================== مفتوح للاختبار ===================
    // ⚠️ تحذير: هذا يسمح للجميع بالقراءة والكتابة!
    // ⚠️ استخدم فقط للاختبار ثم أرجع للقواعد الآمنة!
    
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
